<%= form_for(@invite) do |f| %>
  <% if @invite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invite.errors.count, "error") %> prohibited this invite from being saved:</h2>

      <ul>
      <% @invite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
    <%= f.label :suggested_start %>
    <div class="row">
      <div class="span4">
        <%= f.date_select :suggested_start, {}, {:class => 'input-small'} %>
      </div>
      <div class="span3">
        <%= f.time_select :suggested_start, {:default => {:hour => 9, :minute => 00}, :ampm => true, :minute_step => 15}, {:class => "input-small"} %>
      </div>
    </div>
    <%= f.label :suggested_end %>
    <div class="row">
      <div class="span4">
        <%= f.date_select :suggested_end, {}, {:class => 'input-small'} %>
      </div>
      <div class="span3">
        <%= f.time_select :suggested_end, {:default => {:hour => 10, :minute => 00}, :ignore_date => true, :ampm => true, :minute_step => 15}, {:class => "input-small"} %>
      </div>
    </div>

  
    <%= f.label :invitee_name %>
    <%= f.text_field :invitee_name %>
  
    <%= f.label :suggested_start %>
    <%= f.datetime_select :suggested_start %>

  
    <%= f.label :suggested_end %>
    <%= f.datetime_select :suggested_end %>

  
    <%= f.label :street_address %>
    <%= f.text_field :street_address %>

  
    <%= f.label :city %>
    <%= f.text_field :city %>

  
    <%= f.label :state %>
    <%= f.text_field :state %>

  <div class="clear"></div><%= f.submit class: "btn btn-large btn-primary" %>
<% end %>
